.mem_name {
  height: 298rpx;
  background: #01C4A2;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.mem_name image {
  width: 86rpx;
  height: 97rpx;
  margin-bottom: 20rpx;
}

.oper_menu {
  background: #fff;
  margin-top: 44rpx;
  border-top: 1px solid #eeeeee;
}

.oper_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #000000;
  letter-spacing: 4rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eeeeee;
  padding: 0 16rpx;
}

.oper_item>view {
  flex: 1;
}

.oper_item image:nth-child(1) {
  width: 48rpx;
  height: 48rpx;
  margin-right: 32rpx;
}

.oper_item image:nth-child(3) {
  width: 20rpx;
  height: 20rpx;
}

.tips_text {
  padding: 32rpx 16rpx;
  font-size: 26rpx;
}

.tips_text view {
  line-height: 48rpx;
}