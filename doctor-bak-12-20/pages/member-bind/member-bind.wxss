.oper_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 144rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #000000;
  letter-spacing: 2rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eeeeee;
  padding: 0 32rpx;
  background: #FFFFFF;
}

.oper_item label {
  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  color: #01C48F;
  text-align: center;
  display: flex;
  align-items: center;
  height: 144rpx;
}

.oper_item>view:nth-child(1) {
  height: 144rpx;
}

.oper_item>view:nth-child(2) {
  display: flex;
  align-items: center;
}

.oper_item>view:nth-child(2)>view {
  height: 144rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.detail_item {
  display: flex;
  align-items: center;
}

.detail_item>view:nth-child(1) {
  width: 160rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #000000;
  opacity: 0.5;
}

.detail_item>view:nth-child(2) {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 23px;
  color: #000000;
}

.oper_item>view:nth-child(2) image {
  width: 28rpx;
  height: 28rpx;
  margin-left: 20rpx;
}

.save_btn {
  width: 430rpx;
  height: 72rpx;
  background: #EE6E00;
  border-radius: 72rpx;
  text-align: center;
  line-height: 72rpx;
  margin: 72rpx auto 0;
  font-size: 24rpx;
  font-family: Avenir Next LT Pro;
  font-weight: 400;
  line-height: 72rpx;
  color: #FFFFFF;
}